<%= turbo_frame_tag "follow-followed-button" do %>
  <% if user.followers.include?(current_user) %>
    <%= link_to 'Followed', user_following_path(current_user, current_user.followings.find_by(following_user_id: user)), data:{ "turbo-method"=> :delete  }, class: 'btn btn-primary text-white' %>
  <% else %>
    <%= link_to 'Follow', user_followings_path(current_user, following_user_id: user.id), data:{ "turbo-method"=> :post }, class: 'btn btn-outline-primary' %>
  <% end %>
<% end %>
