<%= turbo_frame_tag "messages-form" do %>
  <%= form_with model: Message.new, url: messages_path, class: "d-flex w-100" do |f| %>
    <%= hidden_field_tag :user_id, @user&.id %>
    <%= f.text_field :body, class: "form-control" , placeholder: "Type the message" , type: "text" ,style: "border-bottom-right-radius: 0; border-top-right-radius: 0" %>
    <%= button_tag class: "btn btn-outline-primary" , type: "submit" ,style: "border-bottom-left-radius: 0; border-top-left-radius: 0" do %>
        <i class="bi bi-send-arrow-up"></i>
    <% end %>
  <% end %>
<% end %>