<div class="hashtag-sidebar my-2 rounded-4">
  <p class="fw-semibold text-black text-decoration-none fs-4 p-3 mb-0">Trends for you</p>
  <% Hashtag.limit(5).each do |hashtag| %>
    <div class="item p-3" data-controller="hashtag" data-hashtag-path="<%= hashtag_path(hashtag) %>" >
      <p class="fw-bold mb-0">#<%= hashtag.tag %></p>
      <p class="text-secondary mb-0"><%= hashtag.tweets.size %> Tweets</p>
    </div>
  <% end %>
  <div class="item p-3 showmore">
    <%= link_to 'Show More', '#', class:'text-primary text-decoration-none' %>
  </div>
</div>


